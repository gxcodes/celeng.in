<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "CELENG.IN" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

  <div class="off-canvas-wrap">
  <div class="inner-wrap">

  <nav class="top-bar hide-for-small" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to "CELENG.IN", root_path  %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <% if user_signed_in? %>
      <ul class="right">
        <li class="divider"></li>
        <li><%= link_to "Dashboard", dashboard_index_path  %></li>
        <li class="divider"></li>
        <li><%= link_to "Target Savings", savings_index_path  %></li>
        <li class="divider"></li>
        <li class="has-dropdown">
          <%= link_to "#{current_user.username} (#{current_user.email})", edit_user_registration_path %>
          <ul class="dropdown">
            <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete  %></li>
          </ul>
        </li>
      </ul>
      <% else %>
      <ul class="right">
        <li class="divider"></li>
        <li><%= link_to "Sign up", new_user_registration_path  %></li>
        <li class="divider"></li>
        <li><%= link_to "Login", new_user_session_path  %></li>
        <li class="divider"></li>
        <li class="has-form"><a href="#" class="small button">How To Use</a></li>
      </ul>
      <% end %>

      <!-- Left Nav Section -->
      <!--     (Empty)      -->
    </section>
  </nav>

  <nav class="tab-bar show-for-small">
    <a class="left-off-canvas-toggle menu-icon">
      <span>CELENG.IN</span>
    </a>
  </nav>

  <!-- Off Canvas Menu -->
  <aside class="left-off-canvas-menu">
      <!-- whatever you want goes here -->
      <% if user_signed_in? %>
      <ul class="off-canvas-list">
        <li><label>CELENG.IN</label></li>
        <li><%= link_to root_path do %><i class="fa fa-home fa-lg"></i>&nbsp;&nbsp;Home<% end %></li>
        <li><%= link_to dashboard_index_path do %><i class="fa fa-calendar fa-fw"></i>&nbsp;&nbsp;Dashboard<% end %></li>
        <li><%= link_to savings_index_path do %><i class="fa fa-shopping-cart fa-fw"></i>&nbsp;&nbsp;Target Savings<% end %></li>
        <li><label><%= "#{current_user.username}" %></label></li>
        <li><%= link_to edit_user_registration_path do %><i class="fa fa-user fa-fw"></i>&nbsp;&nbsp;Edit profile<% end %></li>
        <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-out fa-fw"></i>&nbsp;&nbsp;Logout<% end %></li>
      </ul>
      <% else %>
      <ul class="off-canvas-list">
        <li><label>CELENG.IN</label></li>
        <li><%= link_to root_path do %><i class="fa fa-home fa-lg"></i>&nbsp;&nbsp;Home<% end %></li>
        <li><%= link_to new_user_session_path do %><i class="fa fa-sign-in fa-fw"></i>&nbsp;&nbsp;Login<% end %></li>
        <li><%= link_to new_user_registration_path do %><i class="fa fa-user fa-fw"></i>&nbsp;&nbsp;Sign up<% end %></li>
      </ul>
      <% end %>
  </aside>

  <br />
  <div class="row">
    <div class="large-12 column">
      <% if notice %>
        <div data-alert class="alert-box success">
          <%= notice %><a href="#" class="close">&times;</a>
        </div>
      <% end %>
      <% if alert %>
        <div data-alert class="alert-box alert">
          <%= alert %><a href="#" class="close">&times;</a>
        </div>
      <% end %>
    </div>
  </div>

    <%= yield %>
    <%= javascript_include_tag "application" %>

  <!-- close the off-canvas menu -->
  <a class="exit-off-canvas"></a>
  </div>
  </div>

  </body>
</html>